function getAds(content) {
  return content[Math.floor(Math.random() * content.length)];
}
function renderAd(data) {
  $item = $('<a/>').attr('href', data.link).attr('target', '_blank').addClass('item');
  ad_html = '';
  ad_html = ad_html + '<table class="table"><tr>';
  if (data.image) ad_html = ad_html + '<td><div class="pic"><img src="' + data.image + '"></div></td>';
  ad_html = ad_html + '<td><div class="content">';
  if (data.title) ad_html = ad_html + '<div class="title">' + data.title + '</div>';
  if (data.text) ad_html = ad_html + '<div class="text">' + data.text + '</div>';
  if (data.url) ad_html = ad_html + '<div class="link">' + data.url + '</div>';
  ad_html = ad_html + '</div></td></tr></table>';
  $item.html(ad_html);
  $('#board').append($item);
}
function callPixel(s) {
  s = s.replace(/(pr=)[^&]*/, "$1" + ((Math.random() * 10e8 | 0).toString(36)));
  $('<img />').css({position: 'absolute',top: 0,left: -1000}).appendTo('body').attr('src', s).load(function() {
    $(this).remove();
  });
}
rotation = getAds(content);
renderAd(rotation);
callPixel(rotation.pixel);</script></body></html>